generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String       @id @unique @default(uuid())
  name               String       @unique
  email              String       @unique
  password           String       @default("Hazem")
  Role               Role         @default(USER)
  createdTournaments Tournament[] @relation("CreatedTournaments")
  joinedTournaments  Tournament[] @relation("JoinedTournaments")
  Tournament         Tournament?  @relation(fields: [tournamentId], references: [id])
  tournamentId       String?
}

model Tournament {
  id            String   @id @unique @default(uuid())
  name          String
  game          String
  numberOfTeams Int
  ownerId       String
  owner         User     @relation("CreatedTournaments", fields: [ownerId], references: [id])
  cost          Float
  participants  User[]
  joined        User?    @relation("JoinedTournaments", fields: [joinedById], references: [id])
  joinedById    String?
  startTime     DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
